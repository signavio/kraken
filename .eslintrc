{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": 0,
    "object-shorthand": 0,
    "space-in-parens": 0,
    "padded-blocks": 0,
    "react/prop-types": 1,
    "no-use-before-define": 0,
    "no-param-reassign": 0,
    "no-shadow": 1,
    "max-len": 1,
    "react/sort-comp": [1, {
      order: [
        'static-methods',
        'lifecycle',
        'render',
        'everything-else'
      ]
    }]
  }
}